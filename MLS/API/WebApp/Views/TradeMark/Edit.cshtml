@model WebApp.Models.TradeMark

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Nhãn hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label">Loại sản phẩm</label>
                <select class="form-select" asp-for="ProductType" aria-label="Default select example">
                    @foreach (var item in ViewBag.data)
                    {
                        <option value=@item.Id>@item.Name</option>

                    }
                    <option selected="selected" disabled value=@ViewBag.product.ProductTypeId>@ViewBag.producttype.Name</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@ViewBag.tradeMark.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

