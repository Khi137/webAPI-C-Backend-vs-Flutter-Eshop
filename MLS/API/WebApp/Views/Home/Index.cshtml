<!-- furniture section -->

<section class="furniture_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Our Product
            </h2>          
        </div>

        <div class="row">
            @foreach (var item in ViewBag.data)
            {            
                <div class="col-md-6 col-lg-4">

                    <div class="box shadow border" >                      
                        <div class="img-box">
                            <img src=" data:image;base64,@System.Convert.ToBase64String(@item.ImageFile)" alt="">
                        </div>
                        <div class="detail-box">
                            <h5>
                                @item.Name
                            </h5>
                            <h6 class="price_heading" style="text-align: center">
                                <span>@item.Price.ToString("n0")</span> VND
                            </h6>
                            <div class="price_box">
                                
                                <button type="button" class="btn btn-warning" style="color:white" data-bs-toggle="modal" data-bs-target="#_@item.Id">
                                   <i class="fa fa-eye" aria-hidden="true"></i>
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="_@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">@item.Name</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="wrapper">
                                                    <div class="product-img card">
                                                        <img src="data:image;base64,@System.Convert.ToBase64String(@item.ImageFile)" alt="" >
                                                    </div>
                                                    <div class="product-info">
                                                        <div class="product-text">
                                                            

                                                            <p>@item.Description</p>
                                                        </div>                                      
                                                        <div class="product-price-btn">
                                                            <p>Giá: <span>@item.Price.ToString("n0")</span> VND</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">

                                                <a type="button" class="btn btn-warning" style="color:white" asp-action="AddToCart" asp-route-id="@item.Id">Thêm vào giỏ hàng</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-warning" style="color:white">Thêm vào giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>

            }                  
        </div>
    </div>
</section>

